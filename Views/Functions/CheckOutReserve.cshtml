@model IEnumerable<BRMSBS_capstoneproject.Models.ReservationModel>

@{
    ViewData["Title"] = "Check Out";
    Layout = "~/Views/Layouts/CheckOutReserveLayout.cshtml";
}

<div class="text-ctr"><b> Choose reservation to proceed check out </b></div>

<div class="containerbox">
    @if (Model != null && Model.Any(b => (string.Equals(b.BookReserve, "Reservation", StringComparison.OrdinalIgnoreCase) || string.Equals(b.BookReserve, "Reserve", StringComparison.OrdinalIgnoreCase)) && !string.Equals(b.Status, "Pending", StringComparison.OrdinalIgnoreCase)))
            {
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>reserving ID</th>
                            <th>Status</th>
                            <th>Book/Reserve</th>
                            <th>Room Number</th>
                            <th>Last Name</th>
                            <th>Arrival Date</th>
                            <th>Departure Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reserving in Model.Where(b => string.Equals(b.BookReserve, "Reservation", StringComparison.OrdinalIgnoreCase) || string.Equals(b.BookReserve, "Reserve", StringComparison.OrdinalIgnoreCase)))
                        {
                            <tr>
                                <td>
                                    <button type="button" class="btn btn-outline-success btn-sm" data-bs-toggle="modal" data-bs-target="#checkoutPriceModal-@reserving.Id">Check Out</button>
                                    <button type="button" class="btn btn-outline-info btn-sm" data-bs-toggle="modal" data-bs-target="#infoModal-@reserving.Id">Info</button>
                                </td>
                                <td>@reserving.Id</td>
                                <td>@reserving.Status</td>
                                <td>@reserving.BookReserve</td>
                                <td>@reserving.RoomNumber</td>
                                <td>@reserving.LastName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center text-muted">No reservations found.</div>
            }
</div>

<!-- Check Out Price Modal -->
@foreach (var reserving in Model)
{
    var roomRates = Convert.ToInt32(reserving.RoomRates);
    var numberOfPax = Convert.ToInt32(reserving.NumberOfPax);
    var paxCharge = numberOfPax * 70;
    var stayingDays = (reserving.DepartureDate - reserving.ArrivalDate).Days;
    var daysCharge = stayingDays * 70;
    var total = roomRates + paxCharge + daysCharge;
    var vat = total * 0.02;
    var grandTotal = total + vat;
    <div class="modal fade" id="checkoutPriceModal-@reserving.Id" tabindex="-1" aria-labelledby="checkoutPriceModalLabel-@reserving.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="checkoutPriceModalLabel-@reserving.Id">Check Out Price</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <dl class="row">
                        <dt class="col-sm-3">reserving ID</dt>
                        <dd class="col-sm-9">@reserving.Id</dd>
                        <dt class="col-sm-3">First Name</dt>
                        <dd class="col-sm-9">@reserving.FirstName</dd>
                        <dt class="col-sm-3">Last Name</dt>
                        <dd class="col-sm-9">@reserving.LastName</dd>
                        <dt class="col-sm-3">Book/Reserve</dt>
                        <dd class="col-sm-9">@reserving.BookReserve</dd>
                        <dt class="col-sm-3">Arrival Date</dt>
                        <dd class="col-sm-9">@reserving.ArrivalDate.ToString("yyyy-MM-dd")</dd>
                        <dt class="col-sm-3">Departure Date</dt>
                        <dd class="col-sm-9">@reserving.DepartureDate.ToString("yyyy-MM-dd")</dd>
                        <dt class="col-sm-3">Room Number</dt>
                        <dd class="col-sm-9">@reserving.RoomNumber</dd>
                        <dt class="col-sm-3">Room Type</dt>
                        <dd class="col-sm-9">@reserving.RoomType</dd>
                    </dl class="row">
                    ----------------------------------------------------------
                    <dl class="row">
                        <dt class="col-sm-5">Room Rates</dt>
                        <dd class="col-sm-7">@roomRates.ToString()</dd>
                        <dt class="col-sm-5">Number of Pax</dt>
                        <dd class="col-sm-7">@numberOfPax x 70 = @paxCharge.ToString()</dd>
                        <dt class="col-sm-5">Staying Days</dt>
                        <dd class="col-sm-7">@stayingDays x 70 = @daysCharge.ToString()</dd>
                        <dt class="col-sm-5">Total</dt>
                        <dd class="col-sm-7"><b>@grandTotal.ToString()</b></dd>
                    </dl>

                    *VAT applies to 2%<br/><br/>
                    <div class="mb-3">
                        <label for="paymentOption-@reserving.Id" class="form-label">Payment Option</label>
                        <select class="form-select" id="paymentOption-@reserving.Id" name="paymentOption" form="checkoutForm-@reserving.Id" required>
                            <option value="">- Select Here -</option>
                            <option value="Cash">Cash</option>
                            <option value="Digital">Digital</option>
                        </select>
                    </div>
                    Do you want to check out this selected reserving/reservaton?<br/>
                    This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <form asp-action="CheckOut" asp-controller="System" asp-route-reservingId="@reserving.Id" method="post" id="checkoutForm-@reserving.Id">
@*                         <input type="hidden" name="grandTotal" value="@grandTotal" /> *@
                        <!-- Payment option will be submitted via the select above -->
                        <button type="submit" class="btn btn-success">Check Out Now</button>
                    </form>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

